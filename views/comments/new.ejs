<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 well">
            <h1 class="text-center title-text">Add New Comment to:</h1>
            <h3 class="text-center title-text"><%= campground.name %></h3>
            <div class="new-form">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="comment" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/camprgounds">Go Back</a>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>